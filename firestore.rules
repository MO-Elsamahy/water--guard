rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow anyone to read approved reports and public news
    match /reports/{reportId} {
      allow read: if resource.data.status == 'approved';
      allow create: if isSignedIn();
      allow update, delete: if false; // only admins via server/admin SDK
    }

    match /news/{newsId} {
      allow read: if true;
      allow create, update, delete: if request.auth.token.admin == true; // set via custom claims
    }

    match /plumbers/{plumberId} {
      allow read: if resource.data.approved == true;
      allow create: if isSignedIn();
      allow update, delete: if false; // admin via server/admin SDK
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
